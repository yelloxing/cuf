#!/usr/bin/env node

'use strict';

process.title = 'cuf';

const cuf = require('../index');
const options = require('./options').config;

// 组装好缩写和全写的映射
let shortHands = {};
for (let key in options) {
  if (options[key].short) shortHands["-" + options[key].short] = "--" + key;
}

// 命令行传递的参数
const parsed = cuf.option(shortHands, process.argv);

console.log(parsed);